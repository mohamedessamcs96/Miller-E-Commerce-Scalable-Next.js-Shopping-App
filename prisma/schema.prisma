datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id    Int     @id @default(autoincrement())
  name  String
  slug  String  @unique
  price Float
  image String
}



model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  isAdmin   Boolean @default(false)
  createdAt DateTime @default(now())
}